<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="#d3d3d3"
    ohos:orientation="vertical"
    ohos:padding="10vp">

    <Text
        ohos:id="$+id:tv_1"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:padding="10vp"
        ohos:text="购物车商品详情页面"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        />

    <Text
        ohos:id="$+id:tv_2"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:padding="10vp"
        ohos:text="购物车商品详情页面，带有动画"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"
        />

    <Text
        ohos:id="$+id:tv_3"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:padding="10vp"
        ohos:text="仿天猫商品详情页面"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"
        />

    <Text
        ohos:id="$+id:tv_4"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:padding="10vp"
        ohos:text="购物车商品详情页面，带有动画，待点击滑动"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"
        />

    <Text
        ohos:id="$+id:tv_5"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_main"
        ohos:padding="10vp"
        ohos:text="scrollView滚动到顶部"
        ohos:text_color="#000000"
        ohos:text_size="20fp"
        ohos:top_margin="20vp"
        />


</DirectionalLayout>